<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/color_061b45"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/btn_back_07" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1:1문의"
                android:textColor="@color/white"
                android:textSize="19dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_bg_bd"
                android:inputType="text"
                android:textSize="15dp"
                android:textColor="@color/color_999999"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:hint="제목"
                android:textColorHint="@color/color_bbbbbb"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_sub"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_box_bg_bd"
                android:gravity="left"
                android:padding="8dp"
                android:inputType="textMultiLine"
                android:textColor="@color/color_999999"
                android:textSize="15dp"
                android:hint="내용을 입력해주세요."
                android:textColorHint="@color/color_bbbbbb"/>
            <TextView
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지첨부"
                android:textSize="14dp"
                android:textColor="@color/color_555555"/>
            <LinearLayout
                android:id="@+id/ll_file"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/btn_file_bg">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_file"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="첨부파일"
                    android:textSize="14dp"
                    android:textColor="@color/color_777777"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_file_name"
                android:paddingTop="8dp"
                android:textColor="@color/color_555555"
                android:textSize="14dp"
                android:text=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="48dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="닫기"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_pop_left"/>
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:background="@drawable/button_pop_right"/>
        </LinearLayout>
    </LinearLayout>
</layout>
