<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약관 동의"
            android:textColor="@color/color_555555"
            android:textSize="18dp"
            android:paddingTop="18dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_h_line"
            android:layout_marginBottom="40dp"/>
        <LinearLayout
            android:id="@+id/ll_chk_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_chk_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_check_mb_off"/>
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모두동의"
                android:textSize="20dp"
                android:textColor="@color/color_444444"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_chk_1"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_chk_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_check_mb_off"/>
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="@color/color_999999"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관 동의"
                android:paddingLeft="4dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/btn_smenu_go"
                android:textColor="@color/color_555555"
                android:textSize="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_chk_2"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_chk_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_check_mb_off"/>
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="@color/color_999999"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 수집 및 이용동의"
                android:paddingLeft="4dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/btn_smenu_go"
                android:textColor="@color/color_555555"
                android:textSize="17dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_next"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="다음"
            android:textSize="18dp"
            android:textColor="@color/color_777777"
            android:background="@drawable/button_find_id"/>

    </LinearLayout>
</layout>
