<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/color_061b45"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/btn_back_07" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="문의답변하기"
                android:textColor="@color/white"
                android:textSize="19dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bd_tit_line_07"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/q_bg_3_1202"
                android:text="문의"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:textSize="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:paddingTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="15dp"
                    android:textColor="@color/color_444444"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:paddingTop="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000.00.00"
                    android:textSize="12dp"
                    android:textColor="@color/color_bbbbbb"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_question"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13dp"
                android:textColor="@color/color_777777"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_h_line"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/a_bg_2_1202"
                android:text="답변"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_box_bg_mb_1202"
                android:inputType="textMultiLine"
                android:textColor="@color/color_444444"
                android:textSize="15dp"
                android:textColorHint="@color/color_bbbbbb"
                android:hint="답변 내용을 입력해주세요"
                android:gravity="left"
                android:padding="12dp"
                android:id="@+id/et_answer"
                android:layout_marginTop="16dp"
                android:imeOptions="flagNoExtractUi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="48dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="저장하기"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:background="@drawable/button_pop_right"/>
        </LinearLayout>
    </LinearLayout>
</layout>
