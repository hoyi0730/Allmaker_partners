<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bg_07">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/btn_back_07"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건축용어사전"
                android:textSize="19dp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/color_eff3f9"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="13dp"
                        android:textColor="@color/color_888888"
                        android:text="자음별"
                        android:background="@drawable/form_bg_3_07"
                        android:drawableRight="@drawable/ico_down_07"
                        android:paddingLeft="8dp"
                        android:layout_marginRight="6dp"
                        android:paddingRight="8dp"/>
                    <TextView
                        android:id="@+id/tv_type_sub"
                        android:layout_width="0dp"
                        android:layout_marginLeft="6dp"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:textSize="13dp"
                        android:textColor="@color/color_888888"
                        android:text="-"
                        android:layout_weight="1"
                        android:background="@drawable/form_bg_3_07"
                        android:drawableRight="@drawable/ico_down_07"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/form_bg_3_06"
                    android:paddingLeft="8dp"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_word_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textSize="12dp"
                        android:paddingRight="4dp"
                        android:textColor="@color/color_888888"
                        android:imeOptions="flagNoExtractUi" />
                    <ImageView
                        android:id="@+id/iv_search"
                        android:paddingLeft="16dp"
                        android:paddingRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ico_search_3_05"/>
                </LinearLayout>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_list"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                android:id="@+id/ll_no_list">
                <TextView
                    android:id="@+id/tv_noti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검색어를 입력해주세요."
                    android:textColor="@color/color_999999"
                    android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
